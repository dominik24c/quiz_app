{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block body %}

    <h1>Please sign in</h1>
<form id="auth-form" method="post">
    {% for msg in app.flashes('registration-success') %}
        <div class="success">
            <p>{{ msg }}</p>
        </div>
    {% endfor %}

    {% if error %}
        <div class="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="form-control">
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" required autofocus>
    </div>
    <div class="form-control">
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" required>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {% include "layout/recaptcha.html.twig" with  {'button_name':'Login'} %}
</form>
{% endblock %}
